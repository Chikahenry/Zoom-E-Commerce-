@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    foreach (var role in Model)
    {
        <a class="btn btn-primary" asp-action="CreateRole" 
           asp-controller="Admin">Add new role</a>


        <div class="card">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <a class="btn btn-primary">Edit</a>
            <a class="btn btn-danger">Delete</a>

        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">Use the button below to create a role</h5>
        </div>
        <a class="btn btn-primary" asp-controller="Admin" asp-action="CreateRole">
            Create Role
        </a>

    </div>
}
