@model Presentation.Data.Models.Bike
@{
    var image = "~/Images/" + Model.ImageTB;
}

<div class="col-sm-4 col-lg-4 col-md4">
    <div class="img-thumbnail">
        <img style="height:170px;" src="@image" asp-append-version="true" />
    </div>
    <div class="figure-caption">
        <h3 class="float-right">$@Model.Price.ToString()</h3>
        <h3>
            <a>@Model.Name</a>
        </h3>
        <p>@Model.Description </p>
    </div>
    <div class="addToCart text-right">
        <p class="button ">
            <a class="btn btn-primary" id="cartButton" asp-controller="Order" asp-action="AddToOrder" asp-route-bikeID="@Model.BikeID">
                Add to cart
            </a>
        </p>
    </div>
</div>