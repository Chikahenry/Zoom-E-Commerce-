@model Presentation.ViewModels.OrderVM


@if (Model.Order.OrderItems.Count > 0)
{
    <li>
        <a asp-controller="Order">
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <span id="cart-status" class="mr-4 text-danger" >

                @Model.Order.OrderItems.Count Item in cart
            </span>
        </a>
    </li>
} 